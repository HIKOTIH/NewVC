<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gumenniy.stair.View.сontroller.ClientDetail">
    <children>
        <GridPane prefHeight="400.0" prefWidth="600.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="49.0" prefWidth="300.0" text="Имя">
                    <font>
                        <Font size="33.0"/>
                    </font>
                </Label>
                <Label alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="293.0" text="Номер телефона"
                       GridPane.rowIndex="1">
                    <font>
                        <Font size="34.0"/>
                    </font>
                </Label>
                <Label alignment="CENTER_RIGHT" prefHeight="45.0" prefWidth="291.0" text="Детали" GridPane.rowIndex="2">
                    <font>
                        <Font size="30.0"/>
                    </font>
                </Label>
                <TextArea fx:id="phoneField" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1"
                          GridPane.rowIndex="1"/>
                <TextArea fx:id="nameField" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1"/>
                <TextArea fx:id="noteField" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1"
                          GridPane.rowIndex="2"/>
                <Button fx:id="updateClient" mnemonicParsing="false" onAction="#updateClient" text="Изменить данные"
                        textFill="#d01111" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
            </children>
        </GridPane>
    </children>
</AnchorPane>
